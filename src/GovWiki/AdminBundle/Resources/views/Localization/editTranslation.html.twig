{% extends "GovWikiAdminBundle:Environment:layout.html.twig" %}

{% block title %}{{ parent() }} - Edit translation{% endblock %}

{% block breadcrumb %}
    {{- macro.breadcrumbElement('Main', 'govwiki_admin_main_home') -}}
    {{- macro.breadcrumbElement(
    environment.name ~' environment',
    'govwiki_admin_environment_show',
    { 'environment': environment.slug }
    ) -}}
    {{- macro.breadcrumbElement(
    'Localizations',
    'govwiki_admin_localization_index',
    { 'environment': environment.slug }
    ) -}}
    {{- macro.breadcrumbElement(
        locale_name|upper~' locale',
        'govwiki_admin_localization_showlocale',
        {
            'environment': environment.slug,
            'locale_name': locale_name
        }
    ) -}}
    {{ macro.breadcrumbElement('Edit translation') }}
{% endblock breadcrumb %}

{% block panel_title %}
    {{ environment.name }} edit translation
{% endblock panel_title %}

{% block panel_body %}
    {{ form_start(form) }}

    <div class="col-md-6">
        Translation Key
        <h4>{{ transKey }}</h4>
    </div>
    <div class="col-md-6">
        {{ form_row(form.translation) }}
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" class="btn btn-primary" value="Submit">
        </div>
    </div>
    {{ form_end(form) }}
{% endblock panel_body %}
