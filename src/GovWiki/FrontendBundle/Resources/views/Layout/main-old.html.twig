            <script> window.gw = {}; </script>
            <script> window.gw.authorized = "{{ app.user }}"; </script>
            {% set username = '' %}
            {% if app.user %}
                <script> window.gw.user_id = "{{ app.user.id }}"; </script>
                {% set username = app.user.username %}
            {% endif %}
            {%- if (formValid is not defined or formValid is null) -%}
