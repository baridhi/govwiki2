{% extends "GovWikiAdminBundle:Layout:main.html.twig" %}
{% block title %}Show edit request{% endblock %}
{% block body %}
    <div class="container">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Information</div>
                <table class="table">
                    <tr>
                        <td>User</td>
                        <td>{% if editRequest.user %}{{ editRequest.user.username }}{% endif %}</td>
                    </tr>
                    <tr>
                        <td>Status</td>
                        <td>{{ editRequest.status|capitalize }}</td>
                    </tr>
                    <tr>
                        <td>Created</td>
                        <td>{{ editRequest.created|date('m/d/y g:i a') }}</td>
                    </tr>
                    <tr>
                        <td>Entity name</td>
                        <td>{{ editRequest.entityName }}</td>
                    </tr>
                    <tr>
                        <td>Entity id</td>
                        <td>{{ editRequest.entityId }}</td>
                    </tr>
                </table>
                <div class="panel-footer">
                    <div class="btn-group" style="width:100%;">
                        <span data-link="{{path('govwiki_admin_editrequest_apply', {'id': editRequest.id})}}" style="width:50%;" class="btn btn-success ajax-choice{% if editRequest.status != 'pending' %} disabled{% endif %}">Apply</span>
                        <span data-link="{{path('govwiki_admin_editrequest_discard', {'id': editRequest.id})}}" style="width:50%;" class="btn btn-danger ajax-choice{% if editRequest.status != 'pending' %} disabled{% endif %}">Discard</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td>Field</td>
                        <td>Old</td>
                        <td>New</td>
                    </tr>
                </thead>
                <tbody>
                    {% for change in changes %}
                        <tr{% if not change.correct %} class="danger"{% endif %}>
                            <td>{{ change.field }}</td>
                            <td>{% if change.correct %}{{ attribute(targetEntity, change.field) }}{% endif %}</td>
                            <td>{{ change.newValue }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function() {
            $('span.ajax-choice:not(.disabled)').on('click', function() {
                if (confirm('Are you sure?')) {
                    $.post($(this).data('link'), function(response) {
                        if (response.reload) {
                            location.reload()
                        };
                    });
                };
            });
        });
    </script>
{% endblock %}
