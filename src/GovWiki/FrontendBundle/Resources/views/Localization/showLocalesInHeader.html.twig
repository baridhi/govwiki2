{% if locale_names_list|length > 1 %}
    {% for locale in locale_names_list %}
        <li>
            <a class="btn btn-link" href="{{ govwiki_path('govwiki_frontend_localization_changelocale', {'locale_name': locale.shortName}) }}" style="color: black; padding: 0 2px">
                <img src="
                    {{- asset('/img/locales/'~ locale.shortName|lower ~'.png' ) -}}
                ">
            </a>
        </li>
    {% endfor %}
{% endif %}