<div class="paginate">
    <div class="loader" style="display: none"></div>
    <div class="tab-pane-main">
        <div class="text-center">
            {{ knp_pagination_render(pensions) }}
        </div>

        <div class="col-sm-12">

            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="sortable text-center" style="vertical-align: middle">{{knp_pagination_sortable(pensions, 'Employee', 'Pension.employee') }}</th>
                            <th class="sortable text-center" style="vertical-align: middle">{{knp_pagination_sortable(pensions, 'Job title', 'Pension.job') }}</th>
                            <th class="sortable text-center" style="min-width: 95px;vertical-align: middle">{{knp_pagination_sortable(pensions, 'Amount', 'Pension.amount') }}</th>
                            <th class="sortable text-center" style="min-width: 95px;vertical-align: middle">{{knp_pagination_sortable(pensions, 'Benefits', 'Pension.benefits') }}</th>
                            <th class="sortable text-center" style="min-width: 95px;vertical-align: middle">{{knp_pagination_sortable(pensions, 'Disability', 'Pension.disability') }}</th>
                            <th class="sortable text-center" style="min-width: 95px;vertical-align: middle">{{knp_pagination_sortable(pensions, 'Total', 'Pension.total') }}</th>
                            <th class="sortable text-center" style="vertical-align: middle">{{knp_pagination_sortable(pensions, 'Years of service', 'Pension.yearsOfService') }}</th>
                            <th class="sortable text-center" style="vertical-align: middle">{{knp_pagination_sortable(pensions, 'Year of retirement', 'Pension.yearOfRetirement') }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for pension in pensions %}
                            <tr>
                                <td>{{ pension.employee }}</td>
                                <td>{{ pension.job }}</td>
                                <td class="text-right">$ {{ pension.amount|number_format }}</td>
                                <td class="text-right">$ {{ pension.benefits|number_format }}</td>
                                <td class="text-right">$ {{ pension.disability|number_format }}</td>
                                <td class="text-right">$ {{ pension.total|number_format }}</td>
                                <td class="text-right">{{ pension.yearsOfService }}</td>
                                <td class="text-right">{{ pension.yearOfRetirement }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>