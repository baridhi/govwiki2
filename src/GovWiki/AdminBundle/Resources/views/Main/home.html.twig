{% extends "GovWikiAdminBundle:Layout:main.html.twig" %}

{% block title %}{{ parent() }} - Environments{% endblock %}

{% block body %}
    <div class="container-fluid">
        {% if is_granted('ROLE_ADMIN') %}
            <div id="delete-alert" class="alert alert-danger fade">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                Delete environment with all governments?
                <div class="btn-group">
                    <a id="delete-confirm" class="btn btn-danger">
                        Yes
                    </a>
                    <button class="btn btn-success" data-dismiss="alert">
                        No
                    </button>
                </div>
            </div>
        {% endif %}

        <h3>Environments</h3>
        {{ knp_pagination_render(environments) }}
        <table class="table table-responsive">
            <tr>
                <th>Name</th>
                <th>Domain</th>
                <th>Actions</th>
            </tr>
            {%- for environment in environments -%}
                <tr>
                    <td>
                        <a href="{{ path('govwiki_admin_main_show',
                            { environment: environment.slug}) }}">
                            {{ environment.name }}
                        </a>
                    </td>
                    <td>{{ environment.domain }}</td>
                    <td>
                        {% if is_granted('ROLE_ADMIN') %}
                            <button class="btn btn-danger delete" data-url="{{-
                                path('govwiki_admin_main_remove',
                                { environment: environment.slug }) -}}">
                                Delete
                            </button>
                        {% endif %}
                    </td>
                </tr>
            {%- endfor -%}
        </table>
        {{ knp_pagination_render(environments) }}
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-primary" href="{{ path('govwiki_admin_main_new') }}">
                Add environment
            </a>
        {% endif %}
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        $(function(){
            $('.delete').click(function(){
                console.log('asdas');
                $('#delete-confirm').attr('href', ($this).attr('data-url'));
                $('#delete-alert').alert('show');
            });
        });
    </script>
{% endblock javascript %}
