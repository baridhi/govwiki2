{% extends "GovWikiAdminBundle:Layout:main.html.twig" %}
{% block enviroment_menu %}
    <li>
        <a href="{{ path('govwiki_admin_main_home') }}">Environments</a>
    </li>
    <li{% if app.request.attributes.get('_route') == 'govwiki_admin_government_index' %} class="active"{% endif %}>
        <a href="{{- path('govwiki_admin_government_index',
