
{%- set bioChanged = not (elected.newBio is empty) -%}
{%- set currentUserChangeBio = (elected.bioEditor is not null)
        and (app.user is not null)
        and (elected.bioEditor.id == app.user.id) -%}

<div role="tabpanel" class="tab-pane active" id="Votes">
    <div class="tab-pane-main">
        <div id="bio" class="form-group clearfix">
            <div class="loader"></div>
            <label>Bio</label>
            <div id="elected-bio-view">
                {%- if (bioChanged and currentUserChangeBio) -%}
                    {{- elected.newBio -}}
                {%- else -%}
                    {{- elected.bio -}}
                {%- endif -%}
            </div>
            <textarea style="resize: vertical; display: none"
                      id="elected-bio-edit" rows="6" class="form-control">
                {%- if (bioChanged and currentUserChangeBio) -%}
                    {{- elected.newBio -}}
                {%- else -%}
                    {{- elected.bio -}}
                {%- endif -%}
            </textarea>
            {%- if ((app.user is null)
                or (not bioChanged)
                or (bioChanged and currentUserChangeBio)) -%}
                <div class="pull-right">
                    <button id="change-bio-start"
                        class="btn btn-primary">
                        Change
                    </button>
                    <div id="change-bio-group" style="display: none">
                        <a id="change-bio-save" href="{{- path(
                            'govwiki_api_v1_electedofficial_changebio',
                            { 'elected': elected.id }
                        ) -}}" class="btn btn-primary">Save Changes</a>
                        <button id="change-bio-revert"
                            class="btn btn-default">
                            Revert
                        </button>
                    </div>
                </div>
            {%- else -%}
                <p class="text-info text-center">
                    Unapproved Changes Pending Approval
                </p>
            {%- endif -%}
        </div>

        <hr>

        {% include '@GovWikiFrontend/Partial/Elected/Lists/votes.html.twig' with {
            'list': votes
        } %}
    </div>
</div>
