{% extends "GovWikiAdminBundle:Layout:environment.html.twig" %}

{% block title %}{{ parent() }} - categories{% endblock title %}

{% block breadcrumb %}
    {{ macro.breadcrumbElement('Main', 'govwiki_admin_main_home') }}
    {{
    macro.breadcrumbElement(
    admin_environment|capitalize ~' environment',
    'govwiki_admin_main_show',
    { 'environment': admin_environment }
    )
    }}
    {{ macro.breadcrumbElement('Formats', 'govwiki_admin_format_list') }}
    {{ macro.breadcrumbElement('Categories')}}
{% endblock breadcrumb %}

{% block body %}
    <div class="container-fluid">
        {#
            Navigation.
        #}
        <div class="index-page-head">
            <div class="navigation">
                {{ knp_pagination_render(tabs) }}
                <div class="pull-right">
                    <a class="btn btn-primary" href="{{-
                    path('govwiki_admin_category_new')
                    -}}">Add new</a>
                </div>
            </div>
        </div>

        {#
            List of tabs.
        #}
        <table class="table table-responsive">
            <tr>
                <th>Name</th>
                <th>Order number</th>
                <th>Actions</th>
            </tr>
            {% for tab in tabs %}
                <tr>
                    <td>{{ tab.name }}</td>
                    <td style="vertical-align: middle">
                        {{ tab.orderNumber }}&nbsp
                        {% if not loop.first %}
                            <a href="{{ path('govwiki_admin_category_up', { id: tab.id }) }}">
                                <i class="glyphicon glyphicon-arrow-up text-success"></i>
                            </a>
                        {% endif %}
                        {% if not loop.last  %}
                            <a href="{{ path('govwiki_admin_category_down', { id: tab.id }) }}">
                                <i class="glyphicon glyphicon-arrow-down text-danger"></i>
                            </a>
                        {% endif %}
                    </td>
                    <td>
                        <a class="btn btn-default" href="{{ path('govwiki_admin_category_edit', { id: tab.id }) }}">Edit</a>
                        <button class="btn btn-danger btn-delete" data-url="{{ path('govwiki_admin_category_remove', { id: tab.id }) }}" data-description="Are you sure want to delete category '{{ tab.name }}'?">Delete</button>
                    </td>
                </tr>
            {% endfor %}
        </table>
        {{ knp_pagination_render(tabs) }}

    </div>
{% endblock body %}
