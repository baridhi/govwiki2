{% extends "GovWikiAdminBundle:Layout:main.html.twig" %}

{% block title %}{{ parent() }} - Create translation{% endblock %}

{% block breadcrumb %}
    {{- macro.breadcrumbElement('Main', 'govwiki_admin_main_home') -}}
    {{- macro.breadcrumbElement(
        'Localizations',
        'govwiki_admin_globallocalization_index'
    ) -}}
    {{- macro.breadcrumbElement(
        locale_name|upper~' locale',
        'govwiki_admin_globallocalization_showlocale',
        { 'locale_name': locale_name }
    ) -}}
    {{ macro.breadcrumbElement('Create translation') }}
{% endblock breadcrumb %}

{% block panel_title %}
        New translation
{% endblock panel_title %}

{% block panel_body %}
    {{ form_start(form) }}

    <div class="col-md-6">
        {{ form_label(form.transKey) }}
        {% for flash_message in app.session.flashbag.get('error') %}
            <h6>{{ flash_message }}</h6>
        {% endfor %}
        {{ form_widget(form.transKey) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.translation) }}
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" class="btn btn-primary" value="Submit">
        </div>
    </div>
    {{ form_end(form) }}
{% endblock panel_body %}