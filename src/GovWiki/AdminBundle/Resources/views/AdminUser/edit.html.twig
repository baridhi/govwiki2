{% extends 'GovWikiAdminBundle:Layout:main.html.twig' %}

{% block title %}{{ parent() }} - edit {{ user.username }}{% endblock %}

{% block breadcrumb %}
    {{- macro.breadcrumbElement('Main', 'govwiki_admin_main_home') -}}
    {{- macro.breadcrumbElement('Admins', 'govwiki_admin_adminuser_index') -}}
    {{- macro.breadcrumbElement('Edit '~ user.username) -}}
{% endblock breadcrumb %}

{% block panel_title %}
    Edit {{ user.username }}
{% endblock panel_title %}

{% block panel_body %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary">
        <i class="glyphicon glyphicon-ok"></i> Update
    </button>
    <a class="btn btn-default" href="{{- path(
        'govwiki_admin_adminuser_index'
    ) -}}">
        <i class="glyphicon glyphicon-chevron-left"></i> Back
    </a>
    {{ form_end(form) }}
{% endblock panel_body %}

{% block javascripts %}
    {% javascripts '@GovWikiAdminBundle/Resources/public/js/User/form.js'
        output='js/form.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascripts %}