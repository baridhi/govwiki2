<div class="col-sm-12 col-md-6 col-lg-5">

    {# Map wrapper #}
    <div id="map_wrap">

        {# Preloader #}
        <div class="loader"></div>

        {# Notification message#}
        <div class="mapOnProcessing">
            <h5>Please wait, map recently created</h5>
            <h5>Please refresh page later</h5>
        </div>

        {# Legend #}
        <ul id='menu'>

            {% if 'altTypes' in mapEntity.legendTypes %}
                <li class="legend-header">
                    <span>{{ 'map.select.types'|trans }}:</span>
                </li>
            {% endif %}
        </ul>

        {# Map #}
        <div id="map"></div>

    </div>

</div>

{# Intro text #}
<div class="col-sm-12 col-md-6 col-lg-7">

    <div class="intro-text">
        {{- greetingText|trans|raw -}}
    </div>

</div>