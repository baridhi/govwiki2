{% extends "GovWikiAdminBundle:Layout:environment.html.twig" %}

{% block title %}{{ parent() }} - governments{% endblock %}

{% block breadcrumb %}
    {{- macro.breadcrumbElement('Main', 'govwiki_admin_main_home') -}}
    {{-
        macro.breadcrumbElement(
            admin_environment|capitalize ~' environment',
            'govwiki_admin_main_show',
            { 'environment': admin_environment }
        )
    -}}
    {{- macro.breadcrumbElement('Governments', 'govwiki_admin_government_index') -}}
    {{- macro.breadcrumbElement(
            'Edit '~ government.name,
            'govwiki_admin_government_index',
            { 'government': government.id }
        )
    -}}
    {{-  macro.breadcrumbElement('Documents') -}}
{% endblock breadcrumb %}

{% block body %}

    <div class="row">
        <div class="col-md-12">

            {# Panel #}
            <div class="panel panel-primary">

                {# Header #}
                <div class="panel-heading">
                    <h3 class="panel-title">{{ government.name}} documents</h3>
                </div>

                {# Body #}
                <div class="panel-body">

                    {# Navigation #}
                    <div class="row">

                        {# Pagination #}
                        <div class="col-xs-12 col-sm-12 col-md-4 hidden-xs hidden-sm text-center">
                            {{ knp_pagination_render(documents) }}
                        </div>

                        {# Filter #}
                        <div class="col-xs-8 col-sm-9 col-md-5 col-lg-5 text-center text-left-sm">

                            <div class="row">
                                <form action="" method="get" class="form-inline controls">
                                    <div class="col-xs-10">


                                            <input name="filter[type]" type="text" class="form-control input-sm" placeholder="Type"
                                                   value="{{ app.request.query.get('filter') ? app.request.query.get('filter').type}}">

                                            <input name="filter[year]" type="text" class="form-control input-sm" placeholder="Year"
                                                   value="{{app.request.query.get('filter') ? app.request.query.get('filter').year}}">

                                    </div>

                                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 text-center-xs">
                                        <button type="submit" class="btn btn-sm btn-primary controls" value="Filter"> Filter </button>
                                    </div>
                                </form>
                            </div>

                        </div>

                        {# Controls #}
                        <div class="col-xs-4 col-sm-3 col-md-3 col-lg-3 text-center text-right-sm">
                            <div class="btn-group controls">
                                <a class="btn btn-sm btn-primary" href="{{-
                                path('govwiki_admin_document_new', {
                                    'government': government.id
                                })
                                -}}">Create</a>
                            </div>
                        </div>

                    </div>

                    {# Table #}
                    <div class="row">
                        <div class="col-md-12">

                            <div class="table-responsive">

                                <table class="table table-bordered table-hover text-center">
                                    <thead>
                                        <tr>
                                            <th>{{ knp_pagination_sortable(documents, 'Id',        'Document.id') }}</th>
                                            <th>{{ knp_pagination_sortable(documents, 'Type',      'Document.type') }}</th>
                                            <th>{{ knp_pagination_sortable(documents, 'Name',      'Document.name') }}</th>
                                            <th>{{ knp_pagination_sortable(documents, 'Link',      'Document.link') }}</th>
                                            <th>{{ knp_pagination_sortable(documents, 'Year',      'Document.year') }}</th>
                                            <th class="actions">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for document in documents %}
                                            <tr>
                                                <td>{{ document.id }}</td>
                                                <td>{{ document.type|capitalize }}</td>
                                                <td>{{ document.name }}</td>
                                                <td>{{ document.link }}</td>
                                                <td>{{ document.year }}</td>
                                                <td>
                                                    <div class="btn-group">
                                                        <a href="{{- path('govwiki_admin_document_edit', { 'government': government.id, 'document': document.id }) -}}" class="btn btn-sm btn-default">
                                                                <span class="glyphicon glyphicon-pencil"></span>
                                                                Edit
                                                        </a>
                                                        <button data-url="{{- path('govwiki_admin_document_delete', { 'government': government.id, 'document': document.id }) -}}" class="btn btn-sm btn-danger btn-delete" data-description="Are you sure want to delete government '{{ document.link }}'?">
                                                            <span class="glyphicon glyphicon-remove"></span> Remove
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>


                    {# Navigation #}
                    <div class="row">
                        <div class="col-md-12 text-center">

                            {# Pagination #}
                            <div class="navigation">
                                {{ knp_pagination_render(documents) }}
                            </div>

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
{% endblock %}
