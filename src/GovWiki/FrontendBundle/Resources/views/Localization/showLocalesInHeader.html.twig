{% if locale_names_list|length > 1 %}
    {% for locale in locale_names_list %}
        <li class="pull-left">
            <a onclick='changeLocale("{{ locale.shortName }}", "{{ govwiki_path('govwiki_frontend_localization_changelocale') }}", "{{ current_page_route }}")' class="btn btn-link" href="" style="color: black; padding: 0 2px">
                {{- ('general.'~ locale.shortName) | trans -}}
            </a>
        </li>
    {% endfor %}
{% endif %}