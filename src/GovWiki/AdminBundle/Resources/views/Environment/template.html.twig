{% extends "GovWikiAdminBundle:Environment:layout.html.twig" %}

{% block title %}{{ parent() }} - Templates{% endblock %}

{% block breadcrumb %}
    {{ macro.breadcrumbElement('Main', 'govwiki_admin_main_home') }}
    {{
        macro.breadcrumbElement(
        admin_environment|capitalize ~' environment',
            'govwiki_admin_main_show',
            { 'environment': environment.slug }
        )
    }}
    {{ macro.breadcrumbElement('Templates') }}
{% endblock breadcrumb %}

{% block panel_title %}
{% endblock panel_title %}

{% block panel_body %}
{% endblock panel_body %}

{% block body %}

    <div class="row">
        <div class="col-md-12">

            {# Panel #}
            <div class="panel panel-primary">

                {# Header #}
                <div class="panel-heading">
                    <h3 class="panel-title">Templates</h3>
                </div>

                {# Body #}
                <div class="panel-body">
                    <div>
                        <h4>Available parameters:</h4>
                        <ul>
                            <li>
                                vote:
                                <ul>
                                    <li>vote</li>
                                    <li>didElectedOfficialProposeThis</li>
                                    <li>
                                        legislation
                                        <ul>
                                            <li>name</li>
                                            <li>issueCategory</li>
                                            <li>summary</li>
                                            <li>govAssignedNumber</li>
                                            <li>dateConsidered</li>
                                            <li>government</li>
                                            <li>displayTime</li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                            <li>profileUrl</li>
                            <li>addCommentUrl</li>
                        </ul>
                    </div>


                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-success">Update</button>
                    {{ form_end(form) }}


                </div>

            </div>

        </div>
    </div>

{% endblock %}
