{% extends "GovWikiAdminBundle:Layout:main.html.twig" %}

{% block title %}{{ parent() }} - Edit translation{% endblock %}

{% block breadcrumb %}
    {{ macro.breadcrumbElement('Main', 'govwiki_admin_main_home') }}
    {% if admin_environment is not null %}
        {{
        macro.breadcrumbElement(
        admin_environment|capitalize ~' environment',
        'govwiki_admin_main_show',
        { 'environment': admin_environment }
        )
        }}
    {% endif %}
    {{ macro.breadcrumbElement('Localizations', 'govwiki_admin_localization_index') }}
    {{ macro.breadcrumbElement(locale_name|upper~' Translations', 'govwiki_admin_localization_showlocale', {'locale_name': locale_name}) }}
    {{ macro.breadcrumbElement('Edit translation') }}
{% endblock breadcrumb %}

{% block body %}
    <div class="container-fluid">
        {{ form_start(form) }}

        <div class="col-md-6">
            Translation Key
            <h4>{{ transKey }}</h4>
        </div>
        <div class="col-md-6">
            {{ form_row(form.translation) }}
        </div>
        <div class="row">
            <div class="col-md-12">
                <input type="submit" class="btn btn-primary" value="Submit">
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
