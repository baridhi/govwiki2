{% set copyright = 'footer.copyright'|trans %}
{% set links     = 'footer.links'|trans %}
{% set social    = 'footer.social'|trans %}

<!--start Footer-->
<footer class="footer">
    <div class="footer_row">
        <a href="{{ environment.logoHref }}" class="footer_logo"><img src="{{ asset('/img/AbrePRLogo.png') }}" alt=""></a>
        {% if social is defined and social is not empty %}
            <ul class="footer_networks">
                <li><a href="https://www.facebook.com/AbrePuertoRico" target="_blank" title="Facebook"><img src="{{ asset('/img/network/02_facebook.png') }}" class="icon_network"></a></li>
                <li> <a href="https://twitter.com/abrepuertorico" target="_blank" title="Twitter"><img src="{{ asset('/img/network/01_twitter.png') }}" class="icon_network"></a></li>
                <li><a href="#"><img src="{{ asset('/img/network/03_youtube.png') }}" class="icon_network"></a></li>
                <li><a href="#"><img src="{{ asset('/img/network/07_linkedin.png') }}" class="icon_network"></a></li>
                <li><a href="http://plus.google.com/communities/102227212053653047640"><img src="{{ asset('/img/network/14_google+.png') }}" class="icon_network"></a></li>
                <li><a href="#"><img src="{{ asset('/img/network/15_tumblr.png') }}" class="icon_network"></a></li>
            </ul>
        {% endif %}
    </div>
    <address class="footer_address">
        1001 Ave Ponce de Leon San Juan, PR 00907
        <a href="tel:(212) 334-1300" class="phone">(212) 334-1300</a>
    </address>
    {% if copyright is defined and copyright is not empty %}
        {{ copyright|raw }}
    {% endif %}

    {% if links is defined and links is not empty %}
        <div class="footer__row_links">
            {{ links|raw }}
        </div>
    {% endif %}

</footer>
<!--end Footer-->



