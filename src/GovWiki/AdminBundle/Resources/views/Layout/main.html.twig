{% extends "::base.html.twig" %}
{% block title %}GovWiki Admin{% endblock title %}
{% block stylesheets %}
    {{ parent() }}
    <link href="https://bootswatch.com/paper/bootstrap.min.css" rel="stylesheet">
    {% stylesheets 'bundles/govwikiadmin/css/*' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block header %}
<nav class="navbar navbar-default navbar-branded">
    <div class="container-fluid">
        <div class="navbar-header" style="width: 100%;">
            <a class="navbar-brand" href="{{ path('govwiki_admin_main_home') }}"><img src="{{ asset('img/logo_ca.png') }}"></a>
                <ul class="nav navbar-nav">
                    {% block enviroment_menu %}
                        <li{% if app.request.attributes.get('_route') == 'govwiki_admin_user_index' %} class="active"{% endif %}>
                            <a href="{{ path('govwiki_admin_user_index') }}">Users</a>
                        </li>
                    {% endblock enviroment_menu %}
                </ul>
                <ul class="nav navbar-nav pull-right">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li>
                            <a href="
                                {{-
                                    path('fos_user_security_logout')
                                -}}">
                                Logout
                            </a>
                        </li>
                    {% endif %}
                </ul>
        </div>
    </div>
</nav>
<div class="container">
    {% for flashMessage in app.session.flashbag.get('info') %}
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ flashMessage }}
        </div>
    {% endfor %}
</div>
{% endblock %}
{% block modal %}
<div id="modal-window" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">Loading...</div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

    {% javascripts '@GovWikiAdminBundle/Resources/public/js/bootstrap-colorpicker.min.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}


    {#{% javascripts '@HeltheTurbolinksBundle/Resources/public/js/turbolinks.js' %}#}
        {#<script type="text/javascript" src="{{ asset_url }}"></script>#}
    {#{% endjavascripts %}#}
{% endblock %}
