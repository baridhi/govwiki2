{% if locale_names_list|length > 1 %}
    {% for locale in locale_names_list %}
        <li class="pull-left">
            <a class="btn btn-link locale-change" href="{{ govwiki_path('govwiki_frontend_localization_changelocale', { 'locale': locale.shortName }) }}" style="color: black; padding: 0 2px">
                {{- ('general.'~ locale.shortName) | trans -}}
            </a>
        </li>
    {% endfor %}
{% endif %}