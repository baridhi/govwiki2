{% extends "GovWikiMobileBundle:Layout:main.html.twig" %}
{% import _self as self %}

{% block main %}
    {% for flash_message in app.session.flashbag.get('message_saved_success') %}
        <div class="row">
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ flash_message }}
            </div>
        </div>
    {% endfor %}

    <section class="governmentController">

        {% if government is defined %}

            {% set showFinStmt = government.financialStatements is defined and government.financialStatements|length > 0 %}

            {# TMP MOBILE LAYOUT (START) #}
            {%- set image = (government.mainImage) ? government.mainImage : environment.mainImage -%}

            {%- if (image) -%}
                <header class="header" style="background-image: url({{- image -}})">
            {%- else -%}
                <header class="header">
            {%- endif -%}
                    <h6 style="padding: 15px;margin: 0;">{{government.name}}</h6>

                    <div class="header-content">
                        {# Get first tab and show on top. #}
                        {%- set tabName = formats|keys|first -%}
                        {%- set categories = formats|first -%}
                        {%- if tabName != 'Overview + Elected Officials' -%}
                            {%- set formats = formats[1:] -%}
                        {%- endif -%}

                        {% for categoryName, fields in categories %}
                            <table class="statistics-table table">
                                {% for fieldName, format in fields %}

                                    {% if format is viewed(government) %}
                                        {% set value = government|applay_mask(fieldName, format) %}
                                        {% if not value is null %}
                                            <tr>
                                                {# Field name #}
                                                <td>
                                                    {{- ('format.'~format.field)|trans -}}
                                                    {#{{- format.name -}}#}
                                                    {% if ('format.'~format.field~'.help_text')|trans != 'format.'~format.field~'.help_text' %}
                                                        <img data-triger="click" class src="{{ asset('bundles/govwikimobile/img/help.png') }}" title="{{- ('format.'~format.field~'.help_text')|trans -}}">
                                                    {% endif %}
                                                </td>
                                                {# Field value #}
                                                <td>
                                                    {{- value|display|raw -}}
                                                    {% set rankName = "#{fieldName}_rank" %}
                                                    {%- if (government.ranks[rankName] is defined) -%}
                                                        <a class='rank'
                                                           data-field='{{- rankName -}}'
                                                           data-mask='{{- format.mask -}}'
                                                           title='{{- ('format.'~format.field)|trans }}'>
                                                            ({{- government.ranks[rankName][0] }} {{ 'preposition.of'|trans }} {{ government.ranks[rankName][1] -}})
                                                            {#({{- government.ranks[rankName][0] }} of {{ government.ranks[rankName][1] -}})#}
                                                        </a>
                                                    {%- endif -%}

                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endif %}

                                {% endfor %}
                            </table>
                        {% endfor %}

                        <div class="header-icons">
                            <img src="data:image/png;base64,"
                                 style="width: 25px; height: 25px; margin: 5px 5px 5px 0;">
                            <img src="http://www.mailamengg.com/Portals/0/photo1/logo/wikipedia.png"
                                 style="width: 25px; height: 25px; margin: 5px 5px 5px 0;">
                        </div>
                    </div>

                </header>

                {# Tabs control #}
                <div id="tabs-control">
                    <ul class="nav">
                        {% if (formats is defined) and (formats is not empty) %}
                            {% for tabName, categories in formats %}
                                {% set tab_id = categories|first|first.tab_id %}
                                {% set slug = self.tabSlug(tabName) %}

                                <li class="{{ loop.first ? 'active' : '' }} tab {{ environment }}">
                                    <span class="prev_tab">
                                        <i class="glyphicon glyphicon-chevron-left"></i>
                                    </span>
                                    <a class="tab_{{ slug|lower }}"
                                       href="#{{ slug }}">
                                        {{- ('groups.group_id_'~tab_id)|trans -}}
                                    </a>
                                    <span class="next_tab">
                                        <i class="glyphicon glyphicon-chevron-right"></i>
                                    </span>
                                </li>
                            {% endfor %}
                        {% endif %}

                        {% if hasSalaries %}
                            <li class="tab">
                                <span class="prev_tab">
                                    <i class="glyphicon glyphicon-chevron-left"></i>
                                </span>
                                <a class="tab_salaries" href="#Salaries">Salaries</a>
                                <span class="next_tab">
                                    <i class="glyphicon glyphicon-chevron-right"></i>
                                </span>
                            </li>
                        {% endif %}

                        {% if hasPensions %}
                            <li class="tab">
                                <span class="prev_tab">
                                    <i class="glyphicon glyphicon-chevron-left"></i>
                                </span>
                                <a class="tab_pensions" href="#Pensions">Pensions</a>
                                <span class="next_tab">
                                    <i class="glyphicon glyphicon-chevron-right"></i>
                                </span>
                            </li>
                        {% endif %}

                        {% if showFinStmt %}
                            <li class="tab">
                                <span class="prev_tab">
                                    <i class="glyphicon glyphicon-chevron-left"></i>
                                </span>
                                <a class="tab_financial_statements" href="#Financial_Statements">{{ 'gov.financial_statements'|trans }}</a>
                                <span class="next_tab">
                                    <i class="glyphicon glyphicon-chevron-right"></i>
                                </span>
                            </li>
                        {% endif %}
                    </ul>
                </div>

                {# Tab content #}
                <div>

                    {% if (formats is defined) and (formats is not empty) %}
                        {% set tab_id_list = [] %}

                        {% for tabName, categories in formats %}
                            {% set tab_id = categories|first|first.tab_id %}

                            <div class="tab-pane active" id="{{ self.tabSlug(tabName) }}">

                                <div class="tab-title">
                                    {{ ('groups.group_id_'~tab_id)|trans }}
                                </div>

                                <div class="tab-content">

                                    {# Statistics #}

                                    {%- if tabName != 'Overview + Elected Officials' -%}
                                        <div class="statistics col-sm-8">
                                            {{ include('@GovWikiMobile/Partial/Government/tab.html.twig') }}
                                        </div>
                                    {%- endif -%}

                                    {# Overview + Elected Officials #}
                                    {{ include('GovWikiMobileBundle:Partial/Government/Tabs:overviewElected.html.twig') }}

                                    {# Employee Compensation #}
                                    {{ include('GovWikiMobileBundle:Partial/Government/Tabs:employeeCompensation.html.twig') }}

                                    {# Quality of Services #}
                                    {# Generated from tab.html.twig #}

                                    {# Financial Health #}
                                    {{ include('GovWikiMobileBundle:Partial/Government/Tabs:financialHealth.html.twig') }}
                                </div>

                            </div>

                        {% endfor %}


                            {% if hasSalaries %}
                                <div class="tab-pane active" id="Salaries">

                                    <div class="tab-title">
                                        Salaries
                                    </div>

                                    <div class="tab-content">
                                        {{ render(controller('GovWikiApiBundle:V1/Government:mobileSalaries', {
                                        'government': government.id
                                        })) }}
                                    </div>
                                </div>
                            {% endif %}

                            {% if hasPensions %}
                                <div class="tab-pane active" id="Pensions">

                                    <div class="tab-title">
                                        Pensions
                                    </div>

                                    <div class="tab-content">
                                        {{ render(controller('GovWikiApiBundle:V1/Government:mobilePensions', {
                                        'government': government.id
                                        })) }}
                                    </div>

                                </div>
                            {% endif %}

                            {# Financial Statements (if exists) #}
                            {% if showFinStmt %}
                                <div class="tab-pane active" id="Financial_Statements">

                                    <div class="tab-title">{{ 'gov.financial_statements'|trans }}</div>

                                    <div class="tab-content">
                                        {% include 'GovWikiMobileBundle:Partial/Government/Tabs:financialStatements.html.twig' with {
                                        'financialStatements': government.financialStatements
                                        } %}
                                    </div>

                                </div>
                            {% endif %}

                    {% else %}
                        <h3 class="text-center">No data. Please refresh page later</h3>
                    {% endif %}

                </div>
            {% endif %}

        {# TMP MOBILE LAYOUT (END) #}


        {% if app.user and environment_is_subscribable %}
            <div class="subscribe-row">
                <a href="{{-
                    path('govwiki_frontend_government_subscribe', {
                        'government': government.id
                    })
                -}}" class="btn {% if isSubscriber -%}btn-danger unsubscribe{%- else -%}btn-success subscribe{%- endif -%}" id="subscribe">
                    {%- if isSubscriber -%}
                        Unsubscribe
                    {%- else -%}
                        Subscribe
                    {%- endif -%}
                </a>
            </div>

            <div class="message_form_container" id="chat_message_container">
                {{ form_start(message_form) }}
                {{ form_row(message_form.text, {'label': 'Message'}) }}
                {{ form_row(message_form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                {{ form_end(message_form) }}
            </div>
        {% endif %}

        <br>
        <br>

        {% if bottomText %}
            <div class="panel panel-danger notice">
                <div class="panel-body">
                    {{ bottomText|raw }}
                </div>
            </div>
            <br>
        {% endif %}

    </section>

{% endblock %}


{# Stylesheets #}
{% block stylesheets %}

    {{parent()}}

    {% stylesheets '@GovWikiMobileBundle/Resources/public/css/government.scss' filter='scss' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

{% endblock %}


{# Javascripts #}
{% block javascripts %}

    {{parent()}}

    <script src="//cdnjs.cloudflare.com/ajax/libs/numeral.js/1.4.5/numeral.min.js"></script>
    <script src='http://www.google.com/jsapi'></script>

    {% if government is defined %}
        <script>
            window.gw.government = '{{ government_json|escape('js') }}';
            window.gw.urls = {};
            window.gw.urls.popover = '{{ path('govwiki_api_v1_government_getranks', {
                'altTypeSlug': government.altTypeSlug,
                'slug': government.slug,
            }) }}';
            window.gw.urls.search = '{{ path('govwiki_api_v1_comparison_search') }}';
            window.gw.urls.captions = '{{ path('govwiki_api_v1_comparison_captions') }}';
            window.gw.urls.compare = '{{ path('govwiki_api_v1_comparison_compare') }}';
        </script>
    {% endif %}

    <script src="/js/mobile/common.js"></script>
    <script src="/js/mobile/government.js"></script>

{% endblock %}

{%- macro tabSlug(tabName) -%}
    {{- tabName | replace(' ', '_') | replace('+', 'a') -}}
{%- endmacro -%}
