{% extends "GovWikiAdminBundle:Layout:environment.html.twig" %}
{% block title %}{{ parent() }} - Create government{% endblock %}
{% block body %}
    <div class="container-fluid">
        {{ form_start(form) }}
        <!-- Nav tabs -->
        <ul class="nav nav-pills" role="tablist">
            <li role="presentation" class="active"><a href="#General" aria-controls="General" role="tab" data-toggle="tab">General</a></li>
            <li role="presentation"><a href="#Fields" aria-controls="Fields" role="tab" data-toggle="tab">Fields</a></li>
            <li role="presentation"><a href="#Ranks" aria-controls="Ranks" role="tab" data-toggle="tab">Ranks</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content" style="margin-top: 40px; margin-bottom: 40px;">

            {# General tab #}
            {{ include('GovWikiAdminBundle:Partial/Government/Tabs:general.html.twig') }}

            {# Fields tab #}
            {{ include('GovWikiAdminBundle:Partial/Government/Tabs:fields.html.twig') }}

            {# Ranks tab #}
            {{ include('GovWikiAdminBundle:Partial/Government/Tabs:ranks.html.twig') }}

        </div>
        <div class="row">
            <div class="col-md-12">
                <input type="submit" class="btn btn-primary">
            </div>
        </div>
        {{ form_row(form._token) }}
    </div>
{% endblock %}
